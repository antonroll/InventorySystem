<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AvaloniaApplication1"
        x:Class="AvaloniaApplication1.MainWindow"
        x:DataType="local:MainWindow"
        Width="900" Height="600"
        Title="Inventory System">

    <DockPanel>
        
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <Button Click="ProcessNextOrder_OnClick">Process next order</Button>
            <TextBlock Margin="16,0,0,0" VerticalAlignment="Center" Text="Total revenue:"/>
            <TextBlock x:Name="RevenueText" Margin="6,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding QueuedOrders}"
                      AutoGenerateColumns="False"
                      GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time"  Binding="{Binding Time}" />
                    <DataGridTextColumn Header="Items" Binding="{Binding LinesSummary}" />
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" />
                </DataGrid.Columns>
            </DataGrid>
            
            <DataGrid Grid.Column="1"
                      ItemsSource="{Binding ProcessedOrders}"
                      AutoGenerateColumns="False"
                      GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time"  Binding="{Binding Time}" />
                    <DataGridTextColumn Header="Items" Binding="{Binding LinesSummary}" />
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
